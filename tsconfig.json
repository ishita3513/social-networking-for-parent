{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./build",
    "forceConsistentCasingInFileNames":true,
    "strict":true,
    "lib": ["es6", "es2020", "dom"],
    "esModuleInterop": true,
    "module": "NodeNext",
    "rootDir": ".",
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@config/*": ["./src/config/*"],
      "@routes/*": ["./src/routes/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@models/*": ["./src/models/*"],
    }
  }
}
